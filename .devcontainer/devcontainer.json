{
    "name": "Bun Development Environment",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/prulloac/devcontainer-features/bun:1.2.0": {},
        "ghcr.io/devcontainers/features/git:1": {}
    },  
    "postCreateCommand": "bun install && bun run build",
    "updateContentCommand": "bun install && bun run build",
    "customizations": {
        "vscode": {
            "extensions": [
                "oven.bun-vscode"
            ]
        }
    },
    "remoteUser": "vscode"
}
